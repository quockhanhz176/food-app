<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.foodapp.ui.fragments.HomeFragment">


        <action
            android:id="@+id/actionHomeToSaved"
            app:destination="@id/savedRecipesGraph"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/actionHomeToSettings"
            app:destination="@id/userSettings"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/actionHomeToLoginGraph"
            app:destination="@id/loginGraph"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/home"
            app:popUpToInclusive="true" />

    </fragment>

    <navigation
        android:id="@+id/savedRecipesGraph"
        app:startDestination="@id/savedRecipes">
        <fragment
            android:id="@+id/savedRecipes"
            android:name="com.example.foodapp.ui.fragments.SavedRecipesFragment">
            <action
                android:id="@+id/actionSavedToSwipe"
                app:destination="@id/savedRecipesSwipe" />
        </fragment>
        <fragment
            android:id="@+id/savedRecipesSwipe"
            android:name="com.example.foodapp.ui.fragments.RecipeFragment">
            <argument
                android:name="position"
                app:argType="integer"
                android:defaultValue="-1"/>
        </fragment>
    </navigation>

    <fragment
        android:id="@+id/userSettings"
        android:name="com.example.foodapp.ui.fragments.UserSettingFragment" />

    <include app:graph="@navigation/login_nav_graph" />
</navigation>