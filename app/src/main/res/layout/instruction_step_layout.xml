<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/instruction_step_padding">

    <TextView
        android:id="@+id/itemTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_string"
        android:textSize="@dimen/sv_step_title_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredientsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sv_step_text_size"
        app:layout_constraintTop_toBottomOf="@id/itemTitleTv" />

    <TextView
        android:id="@+id/equipmentsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sv_step_text_size"
        app:layout_constraintTop_toBottomOf="@id/ingredientsTv" />

    <TextView
        android:id="@+id/stepTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sv_step_text_size"
        app:layout_constraintTop_toBottomOf="@id/equipmentsTv" />
</androidx.constraintlayout.widget.ConstraintLayout>