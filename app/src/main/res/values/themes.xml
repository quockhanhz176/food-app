<resources>
    <!-- Base application theme. -->
    <style name="Theme.FoodApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?android:textColorSecondary</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/sofiapro_light</item>
    </style>

    <style name="EditextFoodApp" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:paddingHorizontal">@dimen/_15sdp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edt</item>
        <item name="android:paddingVertical">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="EditText.Layout" parent="Widget.Design.TextInputLayout">
        <item name="endIconMode">none</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="hintEnabled">false</item>
        <item name="endIconTint">@null</item>
    </style>

    <style name="Button.Normal" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginHorizontal">@dimen/_35sdp</item>
        <item name="android:paddingVertical">@dimen/_13sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@drawable/bg_button_normal</item>
    </style>

    <style name="RoundTopCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/RoundTopStyle</item>
    </style>

    <style name="RoundBottomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/RoundBottomStyle</item>
    </style>

    <style name="RoundTopStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/recipe_food_food_image_corner</item>
        <item name="cornerSizeTopLeft">@dimen/recipe_food_food_image_corner</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RoundBottomStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/recipe_food_food_image_corner</item>
        <item name="cornerSizeBottomLeft">@dimen/recipe_food_food_image_corner</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <style name="SearchBarStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>

    <style name="SearchBarTheme" parent="Theme.AppCompat">
        <item name="searchViewStyle">@style/SearchBarStyle</item>
    </style>
</resources>